<div>
  <form id="myForm" method="GET" class="speaker-form">
    <div class="form-row">
      <label for="full-name">Nombre</label>
      <input id="first_name" name="first_name" type="text" />
    </div>
    <div class="form-row">
      <label for="email">Correo electronico</label>
      <input
        id="email"
        name="email"
        type="email"
        placeholder="joe@example.com"
      />
      <div class="form-row">
        <label for="full-user">Lastname</label>
        <input id="last_name" name="last_name" type="text" />
      </div>
      <div class="form-row">
        <label for="full-user">Age</label>
        <input id="age" name="age" type="text" />
      </div>
      <div class="form-row">
        <label for="full-user">Password</label>
        <input id="password" name="password" type="password" />
      </div>
    </div>

    <div class="form-row">
      <button id="signup" type="button" class="signup">
        Crear usuario
      </button>
    </div>
  </form>

</div>